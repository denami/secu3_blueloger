<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:id="@+id/LinearLayout01"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content">
	</LinearLayout>
	<TextView
	    android:id="@+id/TextViewChangePathToLogFile"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/changePathToLogFileCommentString" />

	<EditText
	    android:id="@+id/editTextPathToLogFile"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:ems="10"
	    android:inputType="text" />

	<Button
	    android:id="@+id/buttonChangePathToLogFileApplyButtonText"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/changePathToLogFileApplyButtonText" />
</LinearLayout>